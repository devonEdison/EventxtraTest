<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:id="@+id/relativelayout_listrow">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#99000000"
            android:id="@+id/view1"
            android:layout_below="@+id/edit_text_datetimevalue"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#99000000"
            android:id="@+id/view2"
            android:layout_below="@+id/edit_text_taskvalue"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="isFinish"
            android:textStyle="bold"
            android:id="@+id/text_isfinish"
            android:layout_alignBaseline="@+id/edit_text_isfinishvalue"
            android:layout_alignBottom="@+id/edit_text_isfinishvalue"
            android:layout_marginLeft="10dp"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignStart="@+id/view2"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="datetimeValue"
            android:id="@+id/edit_text_datetimevalue"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="datetime"
            android:textStyle="bold"
            android:id="@+id/text_datetime"
            android:layout_alignBaseline="@+id/edit_text_datetimevalue"
            android:layout_alignBottom="@+id/edit_text_datetimevalue"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="taskValue"
            android:id="@+id/edit_text_taskvalue"
            android:layout_below="@+id/view1"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="task"
            android:textStyle="bold"
            android:id="@+id/text_task"
            android:layout_alignBaseline="@+id/edit_text_taskvalue"
            android:layout_alignBottom="@+id/edit_text_taskvalue"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="isFinishValue"
            android:id="@+id/edit_text_isfinishvalue"
            android:layout_below="@+id/view2"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


</RelativeLayout>