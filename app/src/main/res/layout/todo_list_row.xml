<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:id="@+id/relativelayout_listrow">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="datetime"
        android:textStyle="bold"
        android:id="@+id/text_datetime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="datetimeValue"
        android:textStyle="bold"
        android:id="@+id/edit_text_datetimevalue"
        android:layout_toRightOf="@id/text_datetime"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#99000000"
        android:id="@+id/view1"
        android:layout_below="@+id/edit_text_datetimevalue"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="task"
        android:textStyle="bold"
        android:id="@+id/text_task"
        android:layout_below="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="taskValue"
        android:textStyle="bold"
        android:id="@+id/edit_text_taskvalue"
        android:layout_below="@+id/view1"
        android:layout_toRightOf="@id/text_task"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#99000000"
        android:id="@+id/view2"
        android:layout_below="@+id/edit_text_taskvalue"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="isFinish"
        android:textStyle="bold"
        android:id="@+id/text_isfinish"
        android:layout_below="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="isFinishValue"
        android:textStyle="bold"
        android:id="@+id/edit_text_isfinishvalue"
        android:layout_below="@+id/view2"
        android:layout_toRightOf="@id/text_isfinish"
        android:layout_margin="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#99000000"
        android:id="@+id/view3"
        android:layout_below="@+id/edit_text_isfinishvalue"></View>
</RelativeLayout>


</RelativeLayout>